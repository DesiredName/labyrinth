{
    "files.autoSave": "onFocusChange",
    "files.associations": {
        "*.css": "tailwindcss",
        "*.d.ts": "typescript"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.fixAll.eslint": "always"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "css.customData": [
        ".vscode/tailwind.json"
    ],
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}