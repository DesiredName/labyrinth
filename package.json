{
  "name": "vite-npm-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w @webx/web\" \"npm run dev -w @webx/ui\" \"npm run dev -w @webx/server\"",
    "build": "npm run build --workspaces",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "c": "git add . && git commit -m \"update\" && git push"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/styled-components": "latest",
    "autoprefixer": "latest",
    "concurrently": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "prettier": "latest",
    "typescript": "latest",
    "vite-plugin-dts": "latest"
  },
  "dependencies": {
    "@tailwindcss/vite": "latest",
    "class-variance-authority": "latest",
    "clsx": "latest",
    "styled-components": "latest",
    "tailwindcss": "latest",
    "tailwind-merge": "latest"
  }
}